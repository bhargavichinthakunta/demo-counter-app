pipeline {

    agent any

    stages{

        stage('git checkout'){

            steps{

                echo 'https://github.com/bhargavichinthakunta/demo-counter-app.git'
            }
        }

        stage('unit testing'){

            steps{
                echo 'mvn test'
            }
        }

        stage('intigration testing'){

            steps{
                echo 'mvn verify -DskipUnitTests'
            }
        }

        stage('maven build'){

            steps{
                echo 'mvn clean install'
            }
        }

        stage('static code analysics'){
            steps{
                scripts{
                    withSonarQubeEnv(credentialsId: '5e245321-4aac-401a-9244-61127c253bad') 
                    echo 'mvn clean package sonar:sonar'
                }
            }
        }

    }
}

